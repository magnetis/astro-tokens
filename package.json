    "jest": "^28.1.0",
    "lint-staged": "^15.0.1",
    "prettier": "3.2.5",
    "style-dictionary": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^5.0.2"
